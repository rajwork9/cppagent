Devices = Devices.xml
SchemaVersion = 2.0
WorkerThreads = 3
MonitorConfigFiles = yes
Port = 5000
JsonVersion = 1

MinCompressFileSize = 10k

DataPath = $MTCONNECT_DATA_DIR
ConfigPath = $MTCONNECT_CONF_DIR

Files {
  schemas {
    Path = schemas
    Location = /schemas/
  }
  styles {
    Path = styles
    Location = /styles/
  }
  Favicon {
      Path = styles/favicon.ico
      Location = /favicon.ico
  }
}

Directories {
  twin {
    Path = demo/twin/
    Location = /twin/
    Default = index.html
  }
}

Sinks {
#  MqttService {
#  }
}

DevicesStyle { Location = /styles/styles.xsl }
StreamsStyle { Location = /styles/styles.xsl }

Adapters {
  OKUMA {
    Port = 7878
    Host = 127.0.0.1
  }
  Mazak {
    Port = 7879
    Host = 127.0.0.1
  }
}

logger_config {
  output = file $MTCONNECT_LOG_DIR/agent.log
  level = warning
}